.signup-main 
    width 40%
    width 40%
    margin 70px auto
    background-color white
    -webkit-box-shadow 10px 10px 5px 0px rgba(0,0,0,0.75)
    -moz-box-shadow 10px 10px 5px 0px rgba(0,0,0,0.75)
    box-shadow 10px 10px 5px 0px rgba(0,0,0,0.75)

    h1 
        text-align center
        font-size 60px
        padding 20px
        padding-left 55px
        color black
        background-color #f2f2f3
    form
        width 80%
        margin 0 auto
    input[type="text"]
        width 95%
        padding 15px 10px 15px 10px
        border none
        outline none
        border-radius 3px
        font-size 17px
        border-bottom 1px solid gray
        letter-spacing 1px
        margin-bottom 20px
        margin-top 20px

    input[type="password"]
        width 95%
        padding 15px 10px 15px 10px
        border none
        border-bottom 1px solid gray
        outline none
        border-radius 3px
        font-size 17px
        letter-spacing 1px
        margin-bottom 20px

    input[type="submit"]
        margin 30px 0px 50px 0px
        padding 15px 0px
        border none
        width 100%
        outline none
        font-size 20px
        letter-spacing 2px
        font-weight 600
        color #fff
        background-color #fc3955
        border-radius 3px
        transition 0.5s all
        cursor pointer
        webkit-transition 0.5s all
        -moz-transition 0.5s all
        -o-transition 0.5s all
        -ms-transition 0.5s all

    input[type="submit"]:hover
        background-color #07cbc9
